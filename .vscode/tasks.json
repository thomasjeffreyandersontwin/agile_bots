{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Python Tests - Watch Mode",
      "type": "shell",
      "command": "pytest",
      "args": [
        "--looponfail",
        "-v"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Python Tests - Watch with pytest-watch",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest_watch",
        "--",
        "-v",
        "--tb=short"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": {
        "instanceLimit": 1,
        "runOn": "folderOpen"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "All Tests - Watch Mode",
      "dependsOn": [
        "Python Tests - Watch with pytest-watch"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
